{
  // Tailwind
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "tailwindCSS": {
    "includeLanguages": {
      "plaintext": "html"
    }
  },

  // Prettier
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "semi": true
  }
}
